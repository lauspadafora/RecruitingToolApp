<form class="form-horizontal">
    <div class="box-body">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Code</label>
            <div class="col-sm-10">
                {{input type="text" value=questionModel.question.code class="form-control" placeholder="Code of the new question"}}
            </div>      
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Categor√≠a</label>
            <div class="col-sm-10">
                <select class="form-control" onchange={{action 'selectCategory' value='target.value'}}>
                    <option value="">-- SELECCIONE --</option>
                    {{#each questionModel.categorias as |categoria|}}
                        <option value="{{ categoria.id }}">{{ categoria.name }} - {{ categoria.short }}</option>
                    {{/each}}
                </select>
            </div>
        </div> 
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Tipo de Respuesta</label>
            <div class="col-sm-10">       
                <select class="form-control" onchange={{action 'selectAnswerType' value='target.value'}}>
                    <option value="">-- SELECCIONE --</option>
                    {{#each questionModel.tiposrespuestas as |tipo|}}
                        <option value="{{ tipo.id }}">{{ tipo.name }} - {{ tipo.short }}</option>
                    {{/each}}
                </select>
            </div>
        </div>                
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Body</label>
            <div class="col-sm-10">
                {{textarea value=questionModel.question.body class="form-control" placeholder="Body of the new question" rows="5"}}
            </div>      
        </div> 
    </div><!-- /.box-body -->
    <div class="box-footer">
        {{#link-to 'question.index' class='btn btn-default'}}Back{{/link-to}}
        <button type="button" class="btn bg-purple pull-right" {{action 'saveQuestion' questionModel.question}}>Guardar</button>
    </div><!-- /.box-footer -->
</form>  