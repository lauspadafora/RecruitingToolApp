<div class="box box-default">
	<div class="box-header">
		<h3 class="box-title">Category</h3>
	</div><!-- /.box-header -->
	<div class="box-body">
		<form class="form-horizontal">
            <div class="box-body">
                {{#if responseMessage}}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    <h4><i class="icon fa fa-ban"></i>Oops!</h4>
                        Please ensure all required fields are complete and all completed fields are valid.
                </div>              
                {{/if}}
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        {{input type="text" value=model.name class="form-control" placeholder="Name of the new category"}}
                    </div>      
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Short Name (Abbr.)</label>
                    <div class="col-sm-10">
                        {{input type="text" value=model.short class="form-control" placeholder="Abbreviation for the new category" min="4"}}
                    </div>      
                </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
                {{#link-to 'category.index' class='btn btn-default'}}Back{{/link-to}}
                <button type="button" class="btn bg-purple pull-right" {{action 'saveCategory' model}} disabled={{isDisabled}}>Guardar</button>
            </div><!-- /.box-footer -->
        </form>   	    
	</div><!-- /.box-body -->
</div><!-- /.box -->