<div class="box box-default">
	<div class="box-header">
		<h3 class="box-title">Categories</h3>
		{{#link-to 'category.new' tagName="a" class="btn btn-sm bg-purple pull-right"}}<i class="fa fa-plus-square"></i> New Category{{/link-to}} 
	</div><!-- /.box-header -->
	<div class="box-body">		
		<table id="example1" class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
                    <th>Short Name (Abbr.)</th>
					<th>Created At</th>
					<th>Created By</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>	
				{{#each model as |category|}}
				<tr>
					<td>{{category.id}}</td>
					<td>{{category.name}}</td>
                    <td>{{category.short}}</td>
					<td>{{category.created_at}}</td>
					<td>{{category.created_by}}</td>	
					<td>
						{{#link-to 'category.show' category.id class='btn btn-success btn-xs glyphicon glyphicon-info-sign'}}{{/link-to}}
						{{#link-to 'category.edit' category.id class='btn btn-primary btn-xs glyphicon glyphicon-edit'}}{{/link-to}}
						<button type="button" class="btn btn-danger btn-xs glyphicon glyphicon-trash" {{action 'deleteCategory' category}}></button>
        			</td>
				</tr>
				{{/each}}
			</tbody>			
		</table>
	</div><!-- /.box-body -->
</div><!-- /.box -->
